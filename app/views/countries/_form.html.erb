<%= simple_form_for(country) do |f|%>

  <% if country.errors.any? %>
    <div>
      <ul>
      <% country.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
    </div>
    <% end %>
  <div class="form-group">
    <%= f.input :name, label: 'Country Name', as: :select, :collection => ["Bhutan","Cambodia", "Laos", "Nepal", "Myanmar", "Thailand", "Vietnam"], class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>
  <div class="form-group">
    <%= f.input :icon %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>

  <div class="form-group">
    <%= f.input :summary, label: 'summary', :as => :trix_editor, :input_html => {:rows => 5}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :essential_info, label: 'Essential Info', :as => :trix_editor, :input_html => {:rows => 5}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :getting_there, label: 'Getting There', :as => :trix_editor, :input_html => {:rows => 5}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :getting_around, label: 'Getting Around', :as => :trix_editor, :input_html => {:rows => 5}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :weather_climate, label: 'Weather & Climate', :as => :trix_editor, :input_html => {:rows => 5}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :visa_permit, label: 'Visa & Permit', :as => :trix_editor, :input_html => {:rows => 5}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :local_customs, label: 'Local customs', :as => :trix_editor, :input_html => {:rows => 5}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :festival_events, label: 'Festival & Events', :as => :trix_editor, :input_html => {:rows => 5}, class: "form-control" %>
  </div>

  <%= f.submit class: 'btn btn-info' %>
  <%= f.button :button, 'Cancel', type: :reset, class: 'btn btn-outline-info' %>
<% end %>
