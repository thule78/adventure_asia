<%= simple_form_for(activity) do |f|%>

<% if activity.errors.any? %>
<div>
  <ul>
    <% activity.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="form-group">
  <%= f.input :name, label: 'Activity Name', as: :select, :collection => ["Biking","Hiking", "Rafting", "Unesco other", "Other Water", "Outdoor"], class: 'form-control'%>
</div>

<div class="form-group">
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
</div>

<div class="form-group">
  <%= f.input :summary, label: 'Summary', :as => :trix_editor, :input_html => {:rows => 5}, class: 'form-control'%>
</div>

<%= f.submit class: 'btn btn-info' %>
<%= f.button :button, 'Cancel', type: :reset, class: 'btn btn-outline-info' %>
<% end %>


